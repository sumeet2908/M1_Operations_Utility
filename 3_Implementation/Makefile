#TargetName : Dependencies
#<TAB>commands

PROJ_NAME=Calculator
SRC=src/project_main.c src/calculator.c test/test_calculator.c unity/unity.c

#To check if the OS is windows or linux and set the exceutable file extension and delete command accordingly
 ifdef  OS
	RM = del/q
	FixPath = $(subst /,\,$1)
	EXEC = exe
else
	ifeq ($(shell uname), Linux)
		RM = rm -rf
		FixPath = $1
	EXEC = out
   endif  
endif


Build : $(SRC)
	gcc $(SRC) -Iinc -Iunity -o $(call FixPath,$(PROJ_NAME).$(EXEC)) -lm

Run : Build
	./$(call FixPath,$(PROJ_NAME).$(EXEC))

static_analysis:
	cppcheck --enable=all $(SRC)
	
dynamic_analysis: Build
	valgrind ./$(call FixPath,$(PROJ_NAME).$(EXEC))

coverage:
	gcc -fprofile-arcs -ftest-coverage $(SRC) -Iinc -o $(call FixPath,$(PROJ_NAME).$(EXEC)) -lm
	./$(call FixPath,$(PROJ_NAME).$(EXEC))
	gcov -a src/project_main.c src/calculator.c

Clean:
	$(RM) $(call FixPath,$(BUILD_DIR)/*.out)
